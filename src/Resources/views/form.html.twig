{% form_theme form '@SyliusShop/Form/theme.html.twig' %}
<div class="ui form items">
        {{ form_start(form, {'action': path('monsieurbiz_sylius_search_post'), 'method': 'POST', 'attr': {'class': 'item'}}) }}
